---
// CTA Waitlist section, CSS-only motion (no external libraries)
const bullets = ['Early beta access', 'Product updates', 'Investor news'];
---

<section id="waitlist" class="waitlist-section">
  <!-- Background pattern -->
  <div class="bg-gradient" aria-hidden="true"></div>
  <div class="bg-blurs" aria-hidden="true">
    <div class="blob blob-a"></div>
    <div class="blob blob-b"></div>
  </div>

  <div class="container mx-auto max-w-4xl px-6 text-center">
    <div class="stack reveal-on-scroll grid gap-8">
      <!-- Header -->
      <div class="header">
        <div class="icon-shell inline-flex p-4 backdrop-blur-sm rounded-2xl border border-white/20 bg-white/10 mx-auto">
          <!-- Bell icon -->
          <svg class="icon icon-bell" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M12 2a6 6 0 0 0-6 6v3.586l-1.707 1.707A1 1 0 0 0 5 15h14a1 1 0 0 0 .707-1.707L18 11.586V8a6 6 0 0 0-6-6Z" fill="currentColor"/>
            <path d="M9 18a3 3 0 0 0 6 0H9Z" fill="currentColor" opacity="0.8"/>
          </svg>
        </div>

        <h2 class="headline font-semibold text-3xl lg:text-5xl mt-4">
          Be Part of the <span class="accent">Future</span> of Document AI
        </h2>
        <p class="subhead text-white/90 text-lg max-w-3xl mx-auto mt-3 leading-relaxed">
          Join our early waitlist for priority access, product updates, and investor news.
        </p>
      </div>

      <!-- Waitlist form / success -->
      <div class="form-wrap reveal-on-scroll" id="waitlist-wrap">
        <form id="waitlist-form" class="form-grid flex flex-col gap-4 sm:flex-row" autocomplete="off" novalidate>
          <div class="input-wrap">
            <!-- Mail icon -->
            <svg class="icon icon-mail" viewBox="0 0 24 24" aria-hidden="true">
              <rect x="3" y="5" width="18" height="14" rx="2" ry="2" fill="currentColor"/>
              <path d="M3 7l9 6 9-6" stroke="#ffffff" stroke-width="1.6" fill="none"/>
            </svg>
            <input class="w-full rounded-2xl border border-[var(--border)] bg-[var(--background)] px-4 py-3 pl-12 text-base text-[var(--foreground)] placeholder:text-white/60 focus:border-[color:var(--border)] focus:outline-none" type="email" name="email" id="waitlist-email" placeholder="Enter your email address" required />
          </div>
          <button type="submit" class="cta-button">
            <span>Join the Waitlist</span>
            <!-- ArrowRight icon -->
            <svg class="icon icon-arrow" viewBox="0 0 24 24" aria-hidden="true"><path d="M5 12h12M13 6l6 6-6 6" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" fill="none"/></svg>
          </button>
        </form>

        <div id="waitlist-success" class="success-card" hidden>
          <div class="success-row">
            <div class="success-mark">âœ“</div>
            <span>Thank you! You're on the waitlist.</span>
          </div>
        </div>
      </div>

      <!-- Additional info -->
      <div class="extras reveal-on-scroll grid gap-3">
        <div class="extras-row flex flex-wrap justify-center gap-3">
          {bullets.map((b) => (
            <div class="chip">
              <span class="dot" aria-hidden="true"></span>
              <span class="label">{b}</span>
            </div>
          ))}
        </div>
        <p class="extras-note text-white/60 text-sm">No spam, unsubscribe anytime.</p>
      </div>
    </div>
  </div>

  <style>
    .waitlist-section {
      position: relative;
      overflow: hidden;
      padding: 96px 0; /* py-24 */
      background: var(--primary);
      isolation: isolate;
    }
    .bg-gradient { position: absolute; inset: 0; background: linear-gradient(135deg, var(--primary), var(--primary), var(--secondary)); }
    .bg-blurs { position: absolute; inset: 0; opacity: 0.2; }
    .blob { position: absolute; border-radius: 999px; filter: blur(36px); }
    .blob-a { top: 33%; left: 25%; width: 18rem; height: 18rem; background: var(--card); }
    .blob-b { bottom: 33%; right: 33%; width: 24rem; height: 24rem; background: var(--secondary); }

    .container { position: relative; max-width: 64rem; margin: 0 auto; padding: 0 24px; text-align: center; }
    .stack { display: grid; gap: 32px; }

    .icon-shell { display: inline-flex; padding: 16px; background: rgba(255,255,255,0.1); border: 1px solid rgba(255,255,255,0.2); backdrop-filter: blur(6px); border-radius: 16px; margin: 0 auto; }
    .icon { width: 32px; height: 32px; color: var(--accent-foreground); }

    .headline { font-family: var(--font-sans); font-weight: 600; font-size: 36px; color: var(--foreground); margin: 16px 0 0 0; }
    @media (min-width: 1024px) { .headline { font-size: 56px; } }
    .accent { color: var(--foreground) !important; text-decoration: underline; text-decoration-color: color-mix(in oklab, var(--accent) 70%, var(--foreground) 30%); text-underline-offset: 6px; text-decoration-thickness: 2px; }
    .subhead { font-family: var(--font-sans); font-size: 20px; color: color-mix(in oklab, var(--foreground) 82%, transparent) !important; max-width: 48rem; margin: 12px auto 0; line-height: 1.6; }

    .form-wrap { max-width: 40rem; margin: 0 auto; }
    .form-grid { display: flex; flex-direction: column; gap: 16px; }
    @media (min-width: 640px) { .form-grid { flex-direction: row; } }

    .input-wrap { position: relative; flex: 1; }
    .icon-mail { position: absolute; left: 16px; top: 50%; transform: translateY(-50%); width: 20px; height: 20px; color: color-mix(in oklab, var(--foreground) 66%, transparent); }
    /* High-contrast input using existing tokens */
    #waitlist-email { width: 100%; padding: 14px 16px 14px 48px; border-radius: 16px; border: 1px solid color-mix(in oklab, var(--foreground) 24%, var(--border)); background: var(--card); color: var(--foreground); font-size: 16px; font-family: var(--font-sans); outline: none; }
    #waitlist-email::placeholder { color: color-mix(in oklab, var(--foreground) 50%, transparent); }
    #waitlist-email:focus { border-color: var(--ring); box-shadow: 0 0 0 2px color-mix(in oklab, var(--ring) 40%, transparent) inset; }

    .cta-button { display: inline-flex; align-items: center; justify-content: center; gap: 8px; padding: 14px 24px; border-radius: 16px; background: var(--card); color: var(--primary); font-family: var(--font-sans); font-weight: 600; box-shadow: 0 8px 24px color-mix(in oklab, var(--foreground) 12%, transparent); border: none; cursor: pointer; transition: transform 200ms ease, box-shadow 300ms ease; white-space: nowrap; }
    .cta-button:hover { transform: scale(1.02); box-shadow: 0 12px 32px color-mix(in oklab, var(--foreground) 18%, transparent); }
    .cta-button:active { transform: scale(0.98); }
    .icon-arrow { width: 20px; height: 20px; color: var(--primary); transition: transform 300ms ease; }
    .cta-button:hover .icon-arrow { transform: translateX(4px); }

    .success-card { background: rgba(255,255,255,0.1); border: 1px solid rgba(255,255,255,0.2); backdrop-filter: blur(6px); border-radius: 16px; padding: 24px; }
    .success-row { display: inline-flex; align-items: center; justify-content: center; gap: 12px; color: var(--accent-foreground); }
    .success-mark { width: 32px; height: 32px; border-radius: 999px; background: color-mix(in oklab, var(--accent-foreground) 20%, transparent); display: inline-flex; align-items: center; justify-content: center; font-size: 18px; }

    .extras { display: grid; gap: 12px; }
    .extras-row { display: flex; flex-wrap: wrap; justify-content: center; gap: 12px; font-family: var(--font-sans); }

    /* Chip -- Basic: mode-sensitive using site tokens */
    .chip { display: inline-flex; align-items: center; gap: 8px; padding: 8px 12px; border-radius: 999px; background: color-mix(in oklab, var(--card) 92%, transparent); border: 1px solid color-mix(in oklab, var(--foreground) 14%, transparent); color: var(--foreground); font-size: var(--text-sm); box-shadow: 0 6px 18px color-mix(in oklab, var(--foreground) 12%, transparent); transition: transform 200ms ease, box-shadow 200ms ease, background 200ms ease; }
    .chip:hover { transform: translateY(-1px); background: color-mix(in oklab, var(--card) 96%, transparent); box-shadow: 0 10px 22px color-mix(in oklab, var(--foreground) 16%, transparent); }
    .chip .dot { width: 6px; height: 6px; border-radius: 999px; background: var(--secondary); }
    .chip .label { line-height: 1; }
    .extras-note { color: color-mix(in oklab, var(--accent-foreground) 60%, transparent); font-family: var(--font-sans); font-size: 13px; }

    /* Reveal-on-scroll */
    .reveal-on-scroll { opacity: 0; transform: translateY(20px); }
    .reveal-on-scroll.in-view { animation: fadeUp 600ms ease forwards; }
    @keyframes fadeUp { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
  </style>

  <script type="module">
    import { setupRevealObserver } from '/src/utils/revealObserver.ts';
    // Reveal-on-scroll using shared utility
    document.addEventListener('DOMContentLoaded', () => {
      setupRevealObserver({
        selector: '.reveal-on-scroll',
        inViewClass: 'in-view',
        rootMargin: '-100px 0px',
        unobserveOnReveal: 'always'
      });

      // Simple waitlist mock submission
      const form = document.getElementById('waitlist-form');
      const success = document.getElementById('waitlist-success');
      form?.addEventListener('submit', (evt) => {
        evt.preventDefault();
        form.setAttribute('hidden', '');
        success?.removeAttribute('hidden');
        window.setTimeout(() => {
          success?.setAttribute('hidden', '');
          form?.removeAttribute('hidden');
          const input = document.getElementById('waitlist-email');
          if (input && 'value' in input) { input.value = ''; }
        }, 3000);
      });
    });
  </script>
</section>