---
// Hero--Default.astro
// Ported from React (motion/react) to Astro with CSS-only motion.
// No external libraries used.
---
<section id="hero" class="hero" aria-label="Hero">
  <div class="bg-pattern" aria-hidden="true"></div>

  <div class="container">
    <div class="grid">
      <!-- Left content -->
      <div class="left">
        <div class="stack">
          <h1 class="title appear-bottom">
            Unlock AI's Full
            <span class="gradient-text">Potential</span>
            on Business Documents
          </h1>
          <p class="subtitle appear-bottom delay-2">
            Parslee makes it dramatically easier for AI to work with your documents — turning messy files into structured data, verifiable answers, and audit-ready insights.
          </p>
        </div>

        <div class="cta-row appear-bottom delay-3">
          <button class="cta-btn" type="button">
            <span class="cta-label">→ Join the Waitlist</span>
            <span class="cta-hover" aria-hidden="true"></span>
          </button>
          <div class="cta-note">
            <p class="italic">Spaces limited for early beta access</p>
          </div>
        </div>
      </div>

      <!-- Right visual -->
      <div class="right appear-right delay-3">
        <div class="visual">
          <img
            class="hero-image"
            src="https://images.unsplash.com/photo-1616861771635-49063a4636ed?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3Nzg4Nzd8MHwxfHNlYXJjaHwxfHxtb2Rlcm4lMjBkb2N1bWVudCUyMEFJJTIwdGVjaG5vbG9neSUyMGFic3RyYWN0fGVufDF8fHx8MTc1OTU1NDc3MHww&ixlib=rb-4.1.0&q=80&w=1080&utm_source=figma&utm_medium=referral"
            alt="Modern document AI technology visualization"
            loading="lazy"
          />
          <div class="image-overlay" aria-hidden="true"></div>
          <div class="floating-badge" aria-live="polite">
            <span>AI Processing...</span>
          </div>
        </div>

        <div class="decorative" aria-hidden="true"></div>
      </div>
    </div>
  </div>
</section>

<style>
  :root {
    --blue: #091B35;
    --blue-70: rgba(9, 27, 53, 0.7);
    --bg-1: #F9FAFB;
    --bg-2: #FFFFFF;
    --bg-3: #F0F9FF;
    --teal: #00A991;
    --cyan: #3FE0DE;
  }

  .hero {
    position: relative;
    min-height: 100vh;
    background: var(--bg-1);
    overflow: hidden;
  }
  .bg-pattern {
    position: absolute; inset: 0;
    background-image: linear-gradient(to bottom right, var(--bg-1), var(--bg-2), var(--bg-3));
    opacity: 0.7;
  }

  .container { position: relative; max-width: 1120px; margin: 0 auto; padding: 0 24px; }
  .grid { display: grid; grid-template-columns: 1fr; gap: 24px; align-items: center; padding-top: 96px; padding-bottom: 96px; }
  @media (min-width: 1024px) { .grid { grid-template-columns: 1fr 1fr; gap: 48px; } }

  .left { display: grid; gap: 24px; }
  .stack { display: grid; gap: 16px; }
  .title { font-family: "DM Sans", system-ui, -apple-system, Segoe UI, Roboto, sans-serif; color: var(--blue); line-height: 1.1; letter-spacing: -0.02em; }
  .title { font-size: clamp(2.5rem, 5vw, 4rem); }
  .gradient-text { background-image: linear-gradient(to right, var(--teal), var(--cyan)); -webkit-background-clip: text; background-clip: text; color: transparent; font-weight: 700; }
  .subtitle { font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, sans-serif; font-size: clamp(1.125rem, 2.2vw, 1.5rem); color: #374151; line-height: 1.6; max-width: 48ch; }

  .cta-row { display: flex; flex-direction: column; align-items: flex-start; gap: 16px; }
  @media (min-width: 640px) { .cta-row { flex-direction: row; align-items: center; } }
  .cta-btn { position: relative; overflow: hidden; padding: 16px 24px; border-radius: 16px; border: none; cursor: pointer; color: #fff; background-image: linear-gradient(to right, var(--blue), var(--teal)); box-shadow: 0 12px 24px rgba(9,27,53,0.15); transition: transform 200ms ease, box-shadow 200ms ease; }
  .cta-btn:hover { transform: translateY(-1px) scale(1.02); box-shadow: 0 16px 28px rgba(9,27,53,0.2); }
  .cta-btn:active { transform: scale(0.98); }
  .cta-label { position: relative; z-index: 1; display: inline-flex; align-items: center; gap: 8px; font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, sans-serif; font-size: var(--text-lg); }
  .cta-hover { position: absolute; inset: 0; background: var(--teal); opacity: 0; transition: opacity 300ms ease; }
  .cta-btn:hover .cta-hover { opacity: 0.1; }
  .cta-note { font-size: var(--text-sm); color: #4B5563; font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, sans-serif; }

  .right { position: relative; }
  .visual { position: relative; border-radius: 24px; overflow: hidden; background: #fff; box-shadow: 0 24px 48px rgba(0,0,0,0.08); }
  .hero-image { width: 100%; height: 400px; object-fit: cover; }
  @media (min-width: 1024px) { .hero-image { height: 500px; } }
  .image-overlay { position: absolute; inset: 0; background-image: linear-gradient(to top, rgba(9,27,53,0.2), transparent); }
  .floating-badge { position: absolute; top: 16px; right: 16px; background: rgba(255,255,255,0.9); backdrop-filter: blur(6px); border-radius: 12px; padding: 8px 12px; box-shadow: 0 10px 20px rgba(0,0,0,0.08); animation: bob 3s ease-in-out infinite; }
  .floating-badge span { font-size: var(--text-sm); color: var(--blue); font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, sans-serif; }

  .decorative { position: absolute; z-index: -1; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 120%; height: 120%; background-image: linear-gradient(to right, rgba(0,169,145,0.1), rgba(63,224,222,0.1)); border-radius: 9999px; filter: blur(48px); }

  /* Motion */
  @keyframes fadeUp { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
  @keyframes fadeRight { from { opacity: 0; transform: translateX(50px); } to { opacity: 1; transform: translateX(0); } }
  @keyframes bob { 0% { transform: translateY(0); } 50% { transform: translateY(-10px); } 100% { transform: translateY(0); } }
  .appear-bottom { animation: fadeUp 800ms ease-out both; }
  .appear-right { animation: fadeRight 800ms ease-out both; }
  .delay-2 { animation-delay: 200ms; }
  .delay-3 { animation-delay: 600ms; }
</style>