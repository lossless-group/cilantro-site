---
import BaseHeader from '../base/BaseHeader.astro';
import BaseFooter from '../base/BaseFooter.astro';
import '../styles/globals.css';
import { getBrandConfig } from '@knots/brand-config';

type MetaTag = {
  name?: string;
  content?: string;
  property?: string;
  charset?: string;
  httpEquiv?: string;
};

interface BaseLayoutProps {
  title?: string;
  meta?: MetaTag[];
}

const { title = 'Parslee', meta = [] } = Astro.props as BaseLayoutProps;

const SITE_BRAND = import.meta.env.SITE_BRAND ?? 'cilantro';
const SITE_MODE = import.meta.env.SITE_MODE ?? 'light';
const brand = getBrandConfig(SITE_BRAND);
---
<html lang="en" data-theme={SITE_MODE} data-brand={SITE_BRAND}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={brand.assets?.favicon ?? '/appIcon__Parslee.svg'} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    {meta.map((m) => <meta {...m} />)}
    <title>{title}</title>
    <style is:global>{`:root[data-brand="${SITE_BRAND}"] { 
      --primary: ${brand.colors.primary};
      --secondary: ${brand.colors.secondary};
      --accent: ${brand.colors.accent};
      --color-primary-500: ${brand.colors.primary};
      --color-secondary-500: ${brand.colors.secondary};
      --color-accent-500: ${brand.colors.accent};
    }`}</style>
  </head>
  <body>
    <BaseHeader />
    <slot />
    <BaseFooter />
  </body>
</html>