---
import BaseHeader from '../base/BaseHeader.astro';
import BaseFooter from '../base/BaseFooter.astro';
import '../styles/globals.css';

type MetaTag = {
  name?: string;
  content?: string;
  property?: string;
  charset?: string;
  httpEquiv?: string;
};

interface BaseLayoutProps {
  title?: string;
  meta?: MetaTag[];
}

const { title = 'Parslee', meta = [] } = Astro.props as BaseLayoutProps;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/appIcon__Parslee.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    {meta.map((m) => <meta {...m} />)}
    <title>{title}</title>
  </head>
  <body>
    <BaseHeader />
    <slot />
    <BaseFooter />
  </body>
</html>