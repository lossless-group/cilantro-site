---
const currentYear = new Date().getFullYear();
---

<footer id="contact" class="footer-root">
  <div class="container">
    <div class="reveal" data-once>
      <div class="content-grid">
        <section class="company-info">
          <div class="brand-row">
            <div>
              <a href="/" class="logo-link" aria-label="Back to Home">
                <img src="/trademark__Parslee--Lightest.svg" alt="Parslee" class="logo-img" />
              </a>
              <p class="brand-subtitle">Document AI Platform</p>
            </div>
          </div>

          <p class="description">
            Parslee is a Document AI platform developed by Volato Group (NYSE: SOAR).
            We're building infrastructure-level AI that makes it dramatically easier for
            artificial intelligence to understand and work with business documents.
          </p>

          <a
            href="https://flyvolato.com"
            target="_blank"
            rel="noopener noreferrer"
            class="link-accent"
          >
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <rect x="3" y="3" width="6" height="18" rx="1" ry="1"></rect>
              <rect x="15" y="6" width="6" height="15" rx="1" ry="1"></rect>
              <path d="M7 7h-2M7 11h-2M7 15h-2M19 9h-2M19 13h-2M19 17h-2"></path>
              <path d="M3 21h18"></path>
            </svg>
            <span class="link-text">Backed by NYSE-listed Volato Group</span>
            <svg class="icon small dim" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M18 13v6a3 3 0 0 1-3 3H6a3 3 0 0 1-3-3V9a3 3 0 0 1 3-3h6"></path>
              <path d="M15 3h6v6"></path>
              <path d="M10 14L21 3"></path>
            </svg>
          </a>
        </section>

        <section class="nav">
          <h4 class="nav-title">Quick Links</h4>
          <nav>
            <div class="hover-slide">
              <a href="/formalities/privacy" class="nav-link">Privacy Policy</a>
            </div>
            <div class="hover-slide">
              <a href="/formalities/terms-of-service" class="nav-link">Terms of Service</a>
            </div>
            <a href="mailto:hello@parslee.ai" class="nav-link hover-slide">Contact Us</a>
            <a href="#" class="nav-link hover-slide">Investor Relations</a>
          </nav>
        </section>
      </div>

      <div class="divider" />

      <div class="bottom-row">
        <div class="meta">
          <span>© {currentYear} Parslee by Volato Group</span>
          <span class="dot">•</span>
          <span class="small">NYSE: SOAR</span>
        </div>

        <div class="status">
          <div class="status-inner">
            <div class="status-dot" />
            <span>Beta Program Active</span>
          </div>
        </div>
      </div>

      <div class="final-emphasis reveal" style="transition-delay: 300ms">
        <p class="final-text">
          Building the future of document intelligence, one file at a time.
        </p>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Scope variables to the footer subtree to avoid Astro style scoping issues */
  .footer-root {
    --font-sans: 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', Arial, sans-serif;
    --bg: #202124;
    --text: #ffffff;
    --muted: #9ca3af; /* gray-400 */
    --muted-2: #d1d5db; /* gray-300 */
    --accent: #3FE0DE;
    --accent-hover: #00A991;
  }

  .footer-root {
    padding: 4rem 0; /* py-16 */
    background: var(--bg);
    color: var(--text);
  }
  .container {
    max-width: 80rem; /* ~1280px similar to max-w-7xl */
    margin: 0 auto;
    padding: 0 1.5rem; /* px-6 */
  }
  .content-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem; /* gap-12 */
  }
  @media (min-width: 768px) { /* md */
    .content-grid { grid-template-columns: 1fr 1fr; }
  }
  @media (min-width: 1024px) { /* lg */
    .content-grid { grid-template-columns: 2fr 1fr; }
  }

  .company-info { display: flex; flex-direction: column; gap: 1.5rem; }
  .brand-row { display: flex; align-items: center; gap: 0.75rem; }
  .brand-title { font-family: var(--font-sans); font-size: 1.5rem; line-height: 2rem; }
  .brand-subtitle { font-family: var(--font-sans); font-size: 0.875rem; color: var(--muted); }

  /* Footer logo sizing to match header scale */
  .logo-img { display: block; height: 40px; width: auto; }
  @media (min-width: 768px) { .logo-img { height: 48px; } }
  .description { font-family: var(--font-sans); color: var(--muted-2); line-height: 1.7; max-width: 42rem; }

  .link-accent { display: inline-flex; align-items: center; gap: 0.5rem; color: var(--accent); text-decoration: none; transition: color 0.3s ease; }
  .link-accent:hover { color: var(--accent-hover); }
  .icon { width: 1rem; height: 1rem; }
  .icon.small { width: 0.75rem; height: 0.75rem; }
  .icon.dim { opacity: 0.6; }
  .link-text { font-family: var(--font-sans); font-size: 0.875rem; }

  .nav { display: flex; flex-direction: column; gap: 1.5rem; }
  .nav-title { font-family: var(--font-sans); font-size: 1.125rem; }
  .nav-link { display: block; font-family: var(--font-sans); font-size: 0.875rem; color: var(--muted); text-decoration: none; transition: color 0.3s ease; }
  .nav-link:hover { color: var(--accent); }

  .divider { border-top: 1px solid #374151; margin: 0; margin-top: 1rem; margin-bottom: 1rem; } /* border-gray-700 */

  .bottom-row { display: flex; flex-direction: column; gap: 1rem; justify-content: space-between; align-items: center; padding-top: 0.75rem; }
  @media (min-width: 768px) { .bottom-row { flex-direction: row; } }
  .meta { display: flex; align-items: center; gap: 1.5rem; color: #6b7280; font-family: var(--font-sans); font-size: 0.875rem; }
  .dot { display: none; }
  @media (min-width: 768px) { .dot { display: inline; } }
  .small { font-size: 0.75rem; }

  .status-inner { display: flex; align-items: center; gap: 0.5rem; color: #6b7280; font-family: var(--font-sans); font-size: 0.875rem; }
  .status-dot { width: 0.5rem; height: 0.5rem; background: var(--accent-hover); border-radius: 9999px; animation: pulse 1.5s ease-in-out infinite; }
  @keyframes pulse {
    0%, 100% { opacity: 0.4; }
    50% { opacity: 1; }
  }

  .logo-img { display: block; height: 46px; }
  @media (min-width: 768px) { .logo-img { height: 52px; } }

  .reveal { opacity: 0; transform: translateY(20px); transition: opacity 0.6s ease, transform 0.6s ease; }
  .reveal.in-view { opacity: 1; transform: translateY(0); }
  .hover-slide { transition: transform 0.3s ease; }
  .hover-slide:hover { transform: translateX(5px); }

  .final-emphasis { text-align: center; padding-top: 2rem; }
  .final-text { font-family: var(--font-sans); font-size: 0.75rem; color: #4b5563; font-style: italic; }

  @media (prefers-reduced-motion: reduce) {
    .reveal { transition: none; opacity: 1; transform: none; }
    .hover-slide, .hover-slide:hover { transition: none; transform: none; }
    .status-dot { animation: none; }
  }
</style>

<script>
  (function () {
    const elements = document.querySelectorAll('.reveal');
    if (!('IntersectionObserver' in window) || elements.length === 0) {
      elements.forEach((el) => el.classList.add('in-view'));
      return;
    }
    const observer = new IntersectionObserver((entries, obs) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('in-view');
          if (entry.target.hasAttribute('data-once')) {
            obs.unobserve(entry.target);
          }
        }
      });
    }, { threshold: 0.1 });
    elements.forEach((el) => observer.observe(el));
  })();
</script>