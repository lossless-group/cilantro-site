---
const title = Astro.url.searchParams.get('title') || 'Test Title';
const subtitle = Astro.url.searchParams.get('subtitle') || 'Test Subtitle';
const highlight = Astro.url.searchParams.get('highlight') || 'Test';

const imageUrl = `/api/og-image?template=social-share-banner&title=${encodeURIComponent(title)}&subtitle=${encodeURIComponent(subtitle)}&highlight=${encodeURIComponent(highlight)}`;
const templateUrl = `/share-images/social-share-banner?title=${encodeURIComponent(title)}&subtitle=${encodeURIComponent(subtitle)}&highlight=${encodeURIComponent(highlight)}`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>OG Image Test</title>
  <style>
    body {
      font-family: system-ui, sans-serif;
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
      background: #1a1a1a;
      color: #fff;
    }
    h1 {
      color: #00ff9c;
    }
    .section {
      margin: 2rem 0;
      padding: 2rem;
      background: #2a2a2a;
      border-radius: 8px;
    }
    img {
      max-width: 100%;
      border: 2px solid #00ff9c;
      border-radius: 8px;
    }
    a {
      color: #00ff9c;
      text-decoration: none;
    }
    a:hover {
      text-decoration: underline;
    }
    code {
      background: #000;
      padding: 0.2rem 0.5rem;
      border-radius: 4px;
      font-size: 0.9em;
    }
    .params {
      display: grid;
      gap: 0.5rem;
      margin: 1rem 0;
    }
    input {
      padding: 0.5rem;
      background: #1a1a1a;
      border: 1px solid #00ff9c;
      color: #fff;
      border-radius: 4px;
    }
    button {
      padding: 0.75rem 1.5rem;
      background: #00ff9c;
      color: #000;
      border: none;
      border-radius: 4px;
      font-weight: bold;
      cursor: pointer;
    }
    button:hover {
      background: #00cc7d;
    }
  </style>
</head>
<body>
  <h1>OG Image Generator Test</h1>

  <div class="section">
    <h2>Current Parameters</h2>
    <div class="params">
      <div><strong>Title:</strong> {title}</div>
      <div><strong>Subtitle:</strong> {subtitle}</div>
      <div><strong>Highlight:</strong> {highlight}</div>
    </div>
  </div>

  <div class="section">
    <h2>Preview HTML Template</h2>
    <p>This is the raw HTML template with your parameters:</p>
    <a href={templateUrl} target="_blank">Open Template in New Tab</a>
  </div>

  <div class="section">
    <h2>Generated Image (via Playwright)</h2>
    <p>This is the image generated by Playwright screenshotting the template:</p>
    <img src={imageUrl} alt="Generated OG Image" />
    <p style="margin-top: 1rem;">
      <a href={imageUrl} download="og-image.webp">Download Image</a>
    </p>
  </div>

  <div class="section">
    <h2>Try Different Parameters</h2>
    <form style="display: grid; gap: 1rem;">
      <label>
        Title:
        <input type="text" name="title" value={title} style="width: 100%; margin-top: 0.5rem;" />
      </label>
      <label>
        Subtitle:
        <input type="text" name="subtitle" value={subtitle} style="width: 100%; margin-top: 0.5rem;" />
      </label>
      <label>
        Highlight (text to make green):
        <input type="text" name="highlight" value={highlight} style="width: 100%; margin-top: 0.5rem;" />
      </label>
      <button type="submit">Generate New Image</button>
    </form>
  </div>

  <div class="section">
    <h2>API Endpoints</h2>
    <p><strong>Template URL:</strong></p>
    <code>{templateUrl}</code>
    <p style="margin-top: 1rem;"><strong>Image Generation URL:</strong></p>
    <code>{imageUrl}</code>
  </div>
</body>
</html>
